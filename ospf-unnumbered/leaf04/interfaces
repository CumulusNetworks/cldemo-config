
auto lo
iface lo inet loopback
    address 10.0.0.14/32

auto eth0
iface eth0 inet dhcp
    alias management interface
    vrf mgmt

auto mgmt
iface mgmt
    address 127.0.0.1/8
    vrf-table auto


# uplinks
auto swp51
iface swp51
    address 10.0.0.14/32

auto swp52
iface swp52
    address 10.0.0.14/32


# bridge to hosts
auto swp2
iface swp2

auto br0
iface br0
     bridge-ports swp2
     address 172.16.4.1/24
