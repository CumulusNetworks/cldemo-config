
auto lo
iface lo inet loopback
    address fd00::13/128

auto eth0
iface eth0 inet dhcp
    alias management interface
    vrf mgmt

auto mgmt
iface mgmt
    address 127.0.0.1/8
    vrf-table auto


# uplinks
auto swp51
iface swp51
    address fd00::13/128

auto swp52
iface swp52
    address fd00::13/128


# bridge to hosts
auto swp1
iface swp1

auto br0
iface br0
     bridge-ports swp1
     address fd16::3:1/112
